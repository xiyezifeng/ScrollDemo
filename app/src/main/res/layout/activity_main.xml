<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <com.example.lixiao.killerdemo.SinWaveView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左侧"
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                />
            <ImageView
                android:id="@+id/saomiao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                />
            <ImageView
                android:id="@+id/xiaoxi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/saomiao"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/search_bg"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/city"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/xiaoxi"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <EditText
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="#fff"
                    android:text="NMD,WSM"
                    android:textSize="13sp"
                    android:paddingLeft="40dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:paddingRight="20dp"
                    android:gravity="center_vertical"

                    />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#00000000"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00000000"
            android:gravity="center_horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingTop="50dp"
                android:src="@mipmap/miho"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@mipmap/miho"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@mipmap/miho"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            />
        <android.support.design.widget.TabLayout
            android:id="@+id/taglayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/title"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            app:tabIndicatorColor="#fff"
            app:tabTextColor="#fff"
            app:tabSelectedTextColor="#fff"
            >
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaa"/>
        </android.support.design.widget.TabLayout>
        <ImageView
            android:id="@+id/classiv"
            android:src="@mipmap/generic_"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="65dp"
        android:src="@mipmap/search_"
        android:layout_marginTop="15dp"
        />



</FrameLayout>